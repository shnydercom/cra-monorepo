{
	"name": "cra-monorepo",
	"version": "1.0.0",
	"private": "true",
	"scripts": {
		"story": "lerna run storybook --stream",
		"libbuild": "lerna run libbuild --stream",
		"prestart": "lerna run libbuild --stream",
		"start": "lerna run start --stream",
		"watch": "concurrently \"lerna run libwatch --stream\" \"lerna run start --stream\"",
		"watch:theme": "concurrently \"lerna run libwatch --stream\" \"lerna run theme:start --stream\"",
		"lint": "yarn workspaces run lint",
		"build": "yarn libbuild && lerna run build --stream",
		"release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:coformatique/cra-monorepo.git"
	},
	"workspaces": [
		"packages/*",
		"apps/*"
	],
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged"
		}
	},
	"devDependencies": {
		"@semantic-release/changelog": "5.0.1",
		"@semantic-release/git": "9.0.0",
		"@testing-library/jest-dom": "5.11.9",
		"@testing-library/react": "11.2.5",
		"@testing-library/user-event": "12.6.3",
		"@types/node": "14.14.25",
		"@typescript-eslint/eslint-plugin": "^4.0.0",
		"@typescript-eslint/parser": "^4.0.0",
		"babel-eslint": "^10.0.0",
		"concurrently": "^5.3.0",
		"conventional-changelog-conventionalcommits": "4.5.0",
		"eslint": "^7.5.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-config-react-app": "^6.0.0",
		"eslint-plugin-flowtype": "^5.2.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-jest": "^24.0.0",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-react": "^7.20.3",
		"eslint-plugin-react-hooks": "^4.0.8",
		"eslint-plugin-testing-library": "^3.9.0",
		"husky": "4.3.8",
		"lerna": "^3.22.1",
		"lint-staged": "10.5.4",
		"prettier": "2.2.1",
		"semantic-release": "17.3.7",
		"semantic-release-monorepo": "^7.0.4",
		"semantic-release-slack-bot": "2.1.0",
		"typescript": "4.1.3"
	}
}
